<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/specialtyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/item_specialty_list_padding_start_end"
        android:paddingTop="@dimen/item_specialty_list_padding_top_bottom"
        android:paddingEnd="@dimen/item_specialty_list_padding_start_end"
        android:paddingBottom="@dimen/item_specialty_list_padding_top_bottom"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/separateLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate_line_height"
        android:background="@color/separated_line"
        android:paddingStart="@dimen/item_specialty_list_padding_start_end"
        android:paddingEnd="@dimen/item_specialty_list_padding_start_end" />
</LinearLayout>